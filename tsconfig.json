  "compilerOptions": {
    "target": "es5",
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": ["./node_modules", "./test"]
}